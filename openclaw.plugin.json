{
  "id": "feishu",
  "name": "Feishu/Lark OpenClaw Plugin",
  "version": "0.1.0",
  "description": "Feishu/Lark channel plugin for OpenClaw",
  "main": "./index.ts",
  "openclaw": {
    "extensions": ["./index.ts"],
    "channel": {
      "id": "feishu",
      "label": "Feishu/Lark",
      "selectionLabel": "Feishu/Lark (飞书)",
      "docsPath": "/channels/feishu",
      "blurb": "飞书/Lark messaging channel for OpenClaw",
      "order": 100,
      "aliases": ["lark"]
    },
    "install": {
      "npmSpec": "@openclaw/feishu",
      "localPath": "extensions/feishu",
      "defaultChoice": "npm"
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "appId": {
        "type": "string",
        "description": "Feishu App ID"
      },
      "appSecret": {
        "type": "string",
        "description": "Feishu App Secret"
      },
      "domain": {
        "type": "string",
        "enum": ["feishu", "lark"],
        "default": "feishu",
        "description": "Domain: feishu (China) or lark (International)"
      },
      "connectionMode": {
        "type": "string",
        "enum": ["websocket", "webhook"],
        "default": "websocket",
        "description": "Connection mode"
      },
      "dmPolicy": {
        "type": "string",
        "enum": ["pairing", "open", "allowlist"],
        "default": "pairing",
        "description": "DM policy"
      },
      "groupPolicy": {
        "type": "string",
        "enum": ["open", "allowlist", "disabled"],
        "default": "allowlist",
        "description": "Group chat policy"
      },
      "requireMention": {
        "type": "boolean",
        "default": true,
        "description": "Require @mention in groups"
      },
      "mediaMaxMb": {
        "type": "number",
        "default": 30,
        "description": "Max media file size in MB"
      },
      "renderMode": {
        "type": "string",
        "enum": ["auto", "raw", "card"],
        "default": "auto",
        "description": "Render mode for bot replies"
      },
      "verificationToken": {
        "type": "string",
        "description": "Event verification token (for webhook mode)"
      },
      "encryptKey": {
        "type": "string",
        "description": "Encryption key (for webhook mode)"
      }
    },
    "required": ["appId", "appSecret"]
  },
  "uiHints": {
    "appId": { "label": "App ID", "placeholder": "cli_xxxxx" },
    "appSecret": { "label": "App Secret", "sensitive": true },
    "domain": { "label": "Domain" },
    "connectionMode": { "label": "Connection Mode" },
    "dmPolicy": { "label": "DM Policy" },
    "groupPolicy": { "label": "Group Policy" },
    "requireMention": { "label": "Require @mention" },
    "mediaMaxMb": { "label": "Max Media Size (MB)" },
    "renderMode": { "label": "Render Mode" },
    "verificationToken": { "label": "Verification Token", "sensitive": true },
    "encryptKey": { "label": "Encrypt Key", "sensitive": true }
  }
}
